.prev-btn,
.next-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    width: 100px; /* Adjust the button width as needed */
    height: 100px; /* Adjust the button height as needed */
    transition: opacity 0.3s ease-in-out;
}

.prev-btn img,
.next-btn img {
    width: 50%;
    height: 50%;
}

.prev-btn:hover,
.next-btn:hover {
    opacity: 0.8; /* Adjust the hover opacity as desired */
}


</style>

<script>
 
const slider = document.querySelector('.slider');
const prevBtn = document.querySelector('.prev-btn');
const nextBtn = document.querySelector('.next-btn');

let currentIndex = 0;

function slideTo(index) {
    const slideWidth = slider.clientWidth;
    const offset = -index * slideWidth;
    slider.style.transform = `translateX(${offset}px)`;
}

function prevSlide() {
    currentIndex = (currentIndex - 1 + slider.childElementCount) % slider.childElementCount;
    slideTo(currentIndex);
}

function nextSlide() {
    currentIndex = (currentIndex + 1) % slider.childElementCount;
    slideTo(currentIndex);
}

prevBtn.addEventListener('click', prevSlide);
nextBtn.addEventListener('click', nextSlide);


</script>